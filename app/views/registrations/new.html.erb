<h1> Sign up </1>

<%= form_with model: @user, url: sign_up_path do |form| %>
<div class="mb-3"
<%= form.label :email, class: "form-control", placeholder: steff@banana.com %>
</div>
<div class="mb-3"
<%= form.password_field :password, class: "form-control", placeholder: "password" %>
</div>
<div class="mb-3"
<%= form.text_field :password_confirmation, class "form-control", placeholder: "password" %>
</div>

<div class="mb-3>"
<%= form.submit "Sign Up", class "btn btn-primary" %>
</div>
<% end %>
